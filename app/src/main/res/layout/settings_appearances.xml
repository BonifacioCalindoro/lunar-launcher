<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/surrounding"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/application_theme"
        android:textSize="16sp"/>
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/theme_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/select_dark_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/follow_system_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow_system"
            style="@style/Widget.Material3.Chip.Filter.Elevated"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/select_light_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_theme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"/>
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/surrounding">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/background"
            app:icon="@drawable/rounded_bg"
            app:iconTintMode="add"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_wallpaper"
            style="@style/Widget.Material3.Button.ElevatedButton"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_status_bar"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/surrounding"/>
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/hide_status_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/hide_status_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/positive"
            style="@style/Widget.Material3.Chip.Filter.Elevated"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/hide_status_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/negative"
            style="@style/Widget.Material3.Chip.Filter.Elevated"/>
    </com.google.android.material.chip.ChipGroup>

</androidx.appcompat.widget.LinearLayoutCompat>