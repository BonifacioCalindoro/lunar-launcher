<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LunarLauncher" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/window_background</item>
        <!-- System bar colors -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" >@color/status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">false</item>
        <!-- Html links -->
        <item name="android:textColorLink">@color/not_primary</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/not_primary</item>
        <item name="hintTextColor">@color/not_primary</item>
        <item name="android:theme">@style/EditText</item>
    </style>
    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/not_primary</item>
    </style>
</resources>