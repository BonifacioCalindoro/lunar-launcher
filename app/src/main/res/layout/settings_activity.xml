<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/lunar_settings"
            app:expandedTitleGravity="center"
            app:collapsedTitleGravity="center_horizontal"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <View
                android:layout_width="match_parent"
                android:layout_height="196dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5" />
            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_rounded_bg"
        android:backgroundTint="@color/window_background"
        android:layout_marginTop="-24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_format"
                android:textSize="16sp"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/time_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_twelve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/twelve"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/follow_system_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_system"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_twenty_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/twenty_four"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:hint="@string/date_format"
                app:endIconMode="clear_text"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_format"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:hint="@string/city_name"
                app:endIconMode="clear_text"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:hint="@string/owm_key"
                app:endIconMode="clear_text"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_owm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_unit"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/temp_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_celsius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/celsius"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_fahrenheit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fahrenheit"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_city"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/city_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_city_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/positive"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_city_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/negative"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_todos"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <com.google.android.material.slider.Slider
                android:id="@+id/show_todos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="7"
                android:stepSize="1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:hint="@string/feed_url"
                android:layout_marginTop="16dp"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_feed_url"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/double_tap_lock"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/lock_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_lock_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/negative"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_lock_accessibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accessibility"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_lock_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_admin"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_lock_root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/root"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/application_theme"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/theme_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_dark_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dark_theme"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/follow_system_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_system"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_light_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/light_theme"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:textStyle="bold"
                    style="@style/Widget.Material3.Button.ElevatedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>