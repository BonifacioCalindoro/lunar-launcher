<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundWallpaper">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>
    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/window_background</item>
    </style>

    <style name="Slider" parent="Widget.Material3.Slider">
        <item name="thumbRadius">8dp</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="trackColorInactive">@color/almost_transparent</item>
    </style>
</resources>